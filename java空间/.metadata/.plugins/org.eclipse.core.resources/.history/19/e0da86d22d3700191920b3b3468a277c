import java.awt.*;
import javax.swing.*;
class MyWindow extends JFrame{
	private JButton b1,b2,b3,b4,b5,b6;
	MyWindow(){
		this.setTitle("Grid example");
		Container contentPane=getContentPane();
		contentPane.setPreferredSize(new Dimension(400,350));
		contentPane.setLayout(new GridLayout(3,0));
		b1=new JButton("Grid_1");
		b2=new JButton("Grid_2");
		b3=new JButton("Grid_3");
		b4=new JButton("Grid_4");
		b5=new JButton("Grid_5");
		b6=new JButton("Grid_6");
		contentPane.add(b1);
		contentPane.add(b2);
		contentPane.add(b3);
		contentPane.add(b4);
		contentPane.add(b5);
		contentPane.add(b6);	
	}
}
	public class LayoutDemo{
		public static void main(String args[]) {
			MyWindow mywin=new MyWindow();
			mywin.setVisible(true);
			mywin.pack();
			mywin.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		}
		
	
	
	
}

